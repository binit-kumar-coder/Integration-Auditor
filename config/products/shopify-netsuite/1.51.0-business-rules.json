  "productSpecificRules": {
    "description": "Shopify-NetSuite specific validation rules",
    "netsuiteValidation": {
      "requireNetSuiteConnection": true,
      "requiredNetSuiteProperties": [
        "netsuiteConnectionId",
        "nsUtilImportAdaptorApiIdentifier",
        "nsUtilImportAdaptorId"
      ],
      "validateNetSuiteSync": true
    },
    "shopifyValidation": {
      "requireShopifyConnection": true,
      "validateWebhooks": true,
      "requiredShopifyFeatures": [
        "inventory_sync",
        "order_sync",
        "customer_sync"
      ]
    }
  },
  
  "versionSpecificRules": {
    "description": "Rules specific to version 1.51.0",
    "deprecatedFeatures": [],
    "newFeatures": [
      "fulfillment_order_support",
      "graphql_import_adaptors",
      "enhanced_billing_automation"
    ],
    "compatibilityRequirements": {
      "minNetSuiteVersion": "2023.1",
      "minShopifyAPIVersion": "2023-04"
    }
  },
  
  "licenseValidation": {
    "validEditions": ["starter", "standard", "premium", "shopifymarkets", "markets"],
    "maxSettingsSize": 1048576,
    "productFamily": "shopify-netsuite"
  },
  
  "requiredProperties": {
    "topLevel": ["settings", "version"],
    "settingsLevel": ["connectorEdition", "commonresources", "general", "storemap", "sections"],
    "commonresources": ["netsuiteConnectionId", "nsUtilImportAdaptorApiIdentifier", "nsUtilImportAdaptorId"],
    "sectionProperties": ["shopInstallComplete", "id", "mode"]
  },
  
  "offlineConnectionRules": {
    "description": "Rules for detecting problematic offline connections",
    "detectOfflineWithActiveResources": true,
    "crossReferenceFields": {
      "imports": "connectionId",
      "exports": "connectionId"
    },
    "connectionOfflineField": "offline",
    "connectionOfflineValues": [true, "true", "1"],
    "severity": "high",
    "allowOrphanedConnections": true
  },
  
  "updateProcessRules": {
    "description": "Rules for detecting stuck update processes",
    "updateInProgressField": "updateInProgress",
    "updateInProgressValues": [true, "true", "1"],
    "csvFieldName": "UPDATEINPROGRESS",
    "severity": "high",
    "priority": 3,
    "blockingImpact": true
  },
  
  "tolerances": {
    "resourceCountTolerance": 0,
    "configurationDriftTolerance": "none"
  },
  
  "metadata": {
    "businessOwner": "Shopify-NetSuite Integration Team",
    "technicalOwner": "Integration Development Team",
    "lastReviewed": "2025-09-23",
    "reviewCycle": "quarterly",
    "changeApprovalRequired": true
  }
