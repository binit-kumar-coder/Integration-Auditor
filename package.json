{
  "name": "integration-auditor",
  "version": "1.0.0",
  "description": "Enterprise-grade data-driven CSV integration auditor with complete business user control",
  "main": "dist/index.js",
  "type": "commonjs",
  "bin": {
    "integration-auditor": "./dist/cli-data-driven.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli-data-driven.ts",
    "start": "node dist/cli-data-driven.js",
    "deploy": "scripts/deployment.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "jest --detectOpenHandles --verbose",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:e2e:watch": "jest --config jest.config.e2e.js --watch",
    "test:e2e:coverage": "jest --config jest.config.e2e.js --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:update-snapshots": "jest --updateSnapshot",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "audit": "node dist/cli-data-driven.js audit",
    "config": "node dist/cli-data-driven.js config",
    "clean": "rm -rf dist coverage test-results",
    "prepack": "npm run build",
    "validate": "npm run typecheck && npm run lint && npm run test:ci"
  },
  "keywords": [
    "integration",
    "auditor",
    "manifest",
    "remediation",
    "data-integrity",
    "testing",
    "jest"
  ],
  "author": "Integration Team",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/json-rules-engine": "^4.0.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "commander": "^11.0.0",
    "csv-parser": "^3.2.0",
    "express": "^5.1.0",
    "json-rules-engine": "^6.6.0",
    "json2csv": "^5.0.7",
    "lodash": "^4.17.21",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.0",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "config/**/*",
    "docs/**/*",
    "scripts/deployment.sh",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/integration-auditor.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/integration-auditor/issues"
  },
  "homepage": "https://github.com/your-org/integration-auditor#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 30000,
    "maxWorkers": 4
  }
}
